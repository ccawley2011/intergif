| Make release archives of InterGif
|
| Can't easily do directory copies cos of CVS

| 1. Binary archive

create ig
delete ig
SparkFSCreate 1 ig

set alias$doit copy %%0 ig.%%0 a~c~df~l~n~p~q~r~s~t~v
doit Copying
cdir ig.!InterGif
doit !InterGif.!Boot
doit !InterGif.!Help
doit !InterGif.!Run
doit !InterGif.!Sprites
doit !InterGif.!RunImage
doit !InterGif.Copying
doit !InterGif.intergif
doit !InterGif.Sprites
doit !InterGif.Templates
cdir ig.!IGViewer
doit !IGViewer.!Boot
doit !IGViewer.!Help
doit !IGViewer.!Run
doit !IGViewer.!Sprites
doit !IGViewer.!RunImage
doit !IGViewer.Copying
doit !IGViewer.Sprites
doit !IGViewer.Templates


| 2. Source archive

create igsrc
delete igsrc
SparkFSCreate 1 igsrc

set alias$doit copy %%0 igsrc.%%0 a~c~df~l~n~p~q~r~s~t~v
doit Copying
cdir igsrc.!InterGif
doit !InterGif.!Boot
doit !InterGif.!Help
doit !InterGif.!Run
doit !InterGif.!Sprites
doit !InterGif.Copying
doit !InterGif.Sprites
doit !InterGif.Templates
cdir igsrc.!IGViewer
doit !IGViewer.!Boot
doit !IGViewer.!Help
doit !IGViewer.!Run
doit !IGViewer.!Sprites
doit !IGViewer.Copying
doit !IGViewer.Sprites
doit !IGViewer.Templates
cdir igsrc.bin
doit bin.findtypes
doit bin.release
doit bin.rescompile
doit bin.types
doit Makefile
cdir igsrc.src
doit src.betatest
doit src.c
doit src.h
doit src.Makefile
doit src.makefile/ros
doit src.Menus
cdir igsrc.src.o
doit src.s
cdir igsrc.viewersrc
doit viewersrc.c
doit viewersrc.s
doit viewersrc.h
doit viewersrc.Makefile
doit viewersrc.Makefile/ros
doit viewersrc.Menus
doit viewersrc.tools/bmp
doit viewersrc.tools1/bmp
doit viewersrc.winview/rc
cdir igsrc.viewersrc.o
cdir igsrc.examples
doit examples.c
doit examples.Makefile
doit examples.makefile/ros
doit examples.Readme
cdir examples.o
echo Done!
