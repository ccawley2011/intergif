Link=gcc
LinkFlags = -o $@ -mlibscl -mthrowback -LDeskLib: -lDesk-scl
cc = gcc
CCflags = -O6 --unsigned-char -c -Wall -Wno-unused -mlibscl -mthrowback -I../src
Lib = ar
LibFlags = cru $@
ASFlags = -throwback -quit

.SUFFIXES: .c .o

Objects = viewer.o resources.o

all: ../!IGViewer/!RunImage

../!IGViewer/!RunImage: $(Objects) ../src/libanim.a
	$(Link) $(LinkFlags) $(Objects) -L../src -lanim

.c.o:
	@echo Compiling $<
	@$(cc) $(CCflags) -o $@ $<

.s.o:
	@echo Assembling $<
	@asasm $(ASflags) -to $@ -from $<

resources.s: Menus
	^.bin.ResCompile -m Menus -o s.resources
